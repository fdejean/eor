---
import { Button } from "@/components/ui/button";
import { ArrowDown, ArrowLeft } from "lucide-react";
---

<section
    id="intro"
    data-chapter="intro"
    data-nav-label="Prologue"
    class="h-screen w-full flex flex-col items-center justify-center p-8 snap-start bg-gradient-to-b from-background to-secondary/20 relative"
>
    <div
        class="absolute left-12 top-1/2 -translate-y-1/2 hidden lg:flex items-center gap-2 text-muted-foreground/50 animate-in fade-in slide-in-from-left-4 duration-1000 delay-1000 select-none"
    >
        <ArrowLeft className="h-4 w-4" />
        <span class="text-xs font-medium uppercase tracking-widest"
            >Chapters</span
        >
    </div>

    <div class="space-y-6 text-center max-w-4xl h-screen">
        <img
            src="public/hero.png"
            alt="Reddit Data Visualization Logo"
            class="w-1/2 mx-auto mb-[-30px]"
        />
        <h1
            class="text-5xl font-extrabold tracking-tight lg:text-7xl bg-gradient-to-r from-orange-500 to-red-600 bg-clip-text text-transparent animate-in fade-in zoom-in duration-1000"
        >
            Reddit: Echoes of Reality
        </h1>
        <p
            class="text-xl md:text-2xl text-muted-foreground max-w-2xl mx-auto leading-relaxed animate-in slide-in-from-bottom-4 duration-1000 delay-300"
        >
            Exploring how millions of discussions on Reddit reflect real-world
            emotions, seasonal trends, and market shifts.
        </p>
        <div class="animate-in fade-in duration-1000 delay-700">
            <a href="#seasonal-intro">
                <Button
                    size="lg"
                    className="gap-2 rounded-full h-12 px-8 text-lg"
                >
                    Start the Story <ArrowDown
                        className="h-5 w-5 animate-bounce"
                    />
                </Button>
            </a>
        </div>
    </div>
</section>
